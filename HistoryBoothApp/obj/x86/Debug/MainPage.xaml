<Page
    x:Class="HistoryBoothApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HistoryBoothApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" MinWidth="800" MinHeight="500">



    <RelativePanel>
        <Image x:ConnectionId='2' x:Name="image1" Source="/Assets/HUbackground2.jpg" RelativePanel.AlignLeftWithPanel="True"></Image>
        <Image x:ConnectionId='3' x:Name="image2" Source="/Assets/HUlogo.jpg" RelativePanel.RightOf="image1" Stretch="UniformToFill"></Image>
        <StackPanel x:ConnectionId='4' Margin="20,20,60,20" x:Name="mainStackPanel" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignRightWithPanel="True" Orientation="Horizontal">
            <Button x:ConnectionId='5' BorderBrush="Black" Background="DarkGray" CornerRadius="9" x:Name="startButton" MinWidth="80" MinHeight="40" Width="auto" Height="auto" Margin="10,10,30,30"                          >Start</Button>
            <Button x:ConnectionId='6' BorderBrush="Black" Background="DarkGray" CornerRadius="9" x:Name="adminButton" MinWidth="80" MinHeight="40" Width="auto" Height="auto" Margin="10,10,30,30"                          >Admin</Button>
            <Button x:ConnectionId='7' BorderBrush="Black" Background="DarkGray" CornerRadius="9" x:Name="quitButton" MinWidth="80" MinHeight="40" Width="auto" Height="auto" Margin="10,10,30,30"                         >Quit</Button>
        </StackPanel>
    </RelativePanel>
    
</Page>

