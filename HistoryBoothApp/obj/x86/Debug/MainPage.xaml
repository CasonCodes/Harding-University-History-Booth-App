<Page
    x:Class="HistoryBoothApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HistoryBoothApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" MinWidth="800" MinHeight="500">

    <Grid>
        <Image x:ConnectionId='2' x:Name="image1" Source="/Assets/HUbackground.jpg" Margin="-762,-148,683,-138"></Image>
        <Image x:ConnectionId='3' x:Name="image2" Source="/Assets/HUlogo.jpg" Margin="849,-76,-40,-56"></Image>
        <RelativePanel>
            <StackPanel x:ConnectionId='4' x:Name="mainStackPanel" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignRightWithPanel="True" Orientation="Horizontal" Background="Black" CornerRadius="9" Margin="20,20,60,50" BorderBrush="Goldenrod" BorderThickness="3">
                <Button x:ConnectionId='5' BorderBrush="Black" Background="DarkGray" CornerRadius="9" x:Name="startButton" FontSize="25" MinWidth="100" MinHeight="60" Width="auto" Height="auto" Margin="10,10,10,10"                          >Start</Button>
                <Button x:ConnectionId='6' BorderBrush="Black" Background="DarkGray" CornerRadius="9" x:Name="adminButton" FontSize="25" MinWidth="100" MinHeight="60" Width="auto" Height="auto" Margin="10,10,10,10"                          >Admin</Button>
                <Button x:ConnectionId='7' BorderBrush="Black" Background="DarkGray" CornerRadius="9" x:Name="quitButton" FontSize="25" MinWidth="100" MinHeight="60" Width="auto" Height="auto" Margin="10,10,10,10"                         >Quit</Button>
            </StackPanel>
        </RelativePanel>
    </Grid>

</Page>

